<form
    autocomplete="off"
    id="emailForm"
    action="https://formspree.io/f/mjknjvbe"
    method="POST"
    class="flex shadow-xl w-full p-4 md:p-6 rounded-2xl border-t border-gray-200 md:w-1/2 bg-white"
>
    <div class="flex flex-col w-full gap-y-2">
        <div class="w-full flex flex-col gap-y-1">
            <div class="font-semibold">Name</div>
            <input
                class="w-full bg-gray-100 border-b-2 border-green-400 rounded-sm p-1 md:p-2 focus:border-blue-500 focus:outline-none"
                type="text"
                name="name"
                required
            />
        </div>
        <div class="w-full flex flex-col gap-y-1">
            <div class="font-semibold">Email</div>
            <input
                class="w-full bg-gray-100 border-b-2 border-green-400 rounded-sm p-1 md:p-2 focus:border-blue-500 focus:outline-none"
                type="email"
                name="email"
                required
            />
        </div>
        <div class="w-full flex flex-col gap-y-1">
            <div class="font-semibold">Message</div>
            <textarea
                class="w-full bg-gray-100 border-b-2 border-green-400 rounded-sm p-1 md:p-2 focus:border-blue-500 focus:outline-none"
                name="message"
                required></textarea>
        </div>

        <!-- your other form fields go here -->
        <button
            class="bg-green-500 text-white px-3 py-2 transition-all rounded-full hover:px-5 hover:opacity-90 hover:drop-shadow-xl w-min self-center mt-6"
            type="submit">Send</button
        >
    </div>
</form>
