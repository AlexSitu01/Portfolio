---
import Navigation from "./Navigation.astro";
import ProjectCard from "./ProjectCard.astro";
import SchoolCards from "./SchoolCards.astro";
import Section from "./Section.astro";
import {
    Carousel,
    CarouselContent,
    CarouselItem,
    CarouselNext,
    CarouselPrevious,
} from "@/components/ui/carousel";
import CertificatesCarousel from "@/components/ui/CertificatesCarousel.jsx";
import SkillsCards from "./SkillsCards.astro";
import ContactCard from "./ContactCard.astro";
import ExperienceCard from "./ExperienceCard.astro";
---

<div class="">
    <Navigation />

    <div
        class="mt-20 p-10 flex justify-between gap-10 min-h-screen max-md:flex-col"
    >
        <div class="bg-white rounded-2xl w-3/4 p-8 shadow-xl h-min">
            <div class="text-2xl font-bold">Hi there! I'm</div>
            <div class="text-5xl font-bold text-green-500 mt-3">Alex Situ</div>
            <div class="font-semibold mt-3">Software Developer</div>
            <div class="my-10">
                <a
                    href="#contact"
                    class="bg-green-500 text-white px-3 py-2 transition-all rounded-full hover:px-5 hover:opacity-90 hover:drop-shadow-xl"
                    >Contact</a
                >
            </div>
            <div class="h-0.5 bg-slate-300 dark:bg-gray-800"></div>
            <div class="flex justify-center mt-5 gap-3">
                <a
                    class="p-3 h-12 w-12 bg-gray-200 rounded-full cursor-pointer"
                    href="https://github.com/AlexSitu01"
                    target="_blank"
                    rel="noreferrer"
                    ><svg
                        aria-hidden="true"
                        focusable="false"
                        data-prefix="fab"
                        data-icon="github"
                        class="svg-inline--fa fa-github"
                        role="img"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 496 512"
                        ><path
                            fill="currentColor"
                            d="M165.9 397.4c0 2-2.3 3.6-5.2 3.6-3.3.3-5.6-1.3-5.6-3.6 0-2 2.3-3.6 5.2-3.6 3-.3 5.6 1.3 5.6 3.6zm-31.1-4.5c-.7 2 1.3 4.3 4.3 4.9 2.6 1 5.6 0 6.2-2s-1.3-4.3-4.3-5.2c-2.6-.7-5.5.3-6.2 2.3zm44.2-1.7c-2.9.7-4.9 2.6-4.6 4.9.3 2 2.9 3.3 5.9 2.6 2.9-.7 4.9-2.6 4.6-4.6-.3-1.9-3-3.2-5.9-2.9zM244.8 8C106.1 8 0 113.3 0 252c0 110.9 69.8 205.8 169.5 239.2 12.8 2.3 17.3-5.6 17.3-12.1 0-6.2-.3-40.4-.3-61.4 0 0-70 15-84.7-29.8 0 0-11.4-29.1-27.8-36.6 0 0-22.9-15.7 1.6-15.4 0 0 24.9 2 38.6 25.8 21.9 38.6 58.6 27.5 72.9 20.9 2.3-16 8.8-27.1 16-33.7-55.9-6.2-112.3-14.3-112.3-110.5 0-27.5 7.6-41.3 23.6-58.9-2.6-6.5-11.1-33.3 2.6-67.9 20.9-6.5 69 27 69 27 20-5.6 41.5-8.5 62.8-8.5s42.8 2.9 62.8 8.5c0 0 48.1-33.6 69-27 13.7 34.7 5.2 61.4 2.6 67.9 16 17.7 25.8 31.5 25.8 58.9 0 96.5-58.9 104.2-114.8 110.5 9.2 7.9 17 22.9 17 46.4 0 33.7-.3 75.4-.3 83.6 0 6.5 4.6 14.4 17.3 12.1C428.2 457.8 496 362.9 496 252 496 113.3 383.5 8 244.8 8zM97.2 352.9c-1.3 1-1 3.3.7 5.2 1.6 1.6 3.9 2.3 5.2 1 1.3-1 1-3.3-.7-5.2-1.6-1.6-3.9-2.3-5.2-1zm-10.8-8.1c-.7 1.3.3 2.9 2.3 3.9 1.6 1 3.6.7 4.3-.7.7-1.3-.3-2.9-2.3-3.9-2-.6-3.6-.3-4.3.7zm32.4 35.6c-1.6 1.3-1 4.3 1.3 6.2 2.3 2.3 5.2 2.6 6.5 1 1.3-1.3.7-4.3-1.3-6.2-2.2-2.3-5.2-2.6-6.5-1zm-11.4-14.7c-1.6 1-1.6 3.6 0 5.9 1.6 2.3 4.3 3.3 5.6 2.3 1.6-1.3 1.6-3.9 0-6.2-1.4-2.3-4-3.3-5.6-2z"
                        ></path></svg
                    >
                </a>
                <a
                    class="p-3 h-12 w-12 bg-gray-200 rounded-full cursor-pointer"
                    href="https://linkedin.com/in/alexsitu25"
                    target="_blank"
                    rel="noreferrer"
                >
                    <svg
                        aria-hidden="true"
                        focusable="false"
                        data-prefix="fab"
                        data-icon="linkedin"
                        class="svg-inline--fa fa-linkedin"
                        role="img"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 448 512"
                        ><path
                            fill="currentColor"
                            d="M416 32H31.9C14.3 32 0 46.5 0 64.3v383.4C0 465.5 14.3 480 31.9 480H416c17.6 0 32-14.5 32-32.3V64.3c0-17.8-14.4-32.3-32-32.3zM135.4 416H69V202.2h66.5V416zm-33.2-243c-21.3 0-38.5-17.3-38.5-38.5S80.9 96 102.2 96c21.2 0 38.5 17.3 38.5 38.5 0 21.3-17.2 38.5-38.5 38.5zm282.1 243h-66.4V312c0-24.8-.5-56.7-34.5-56.7-34.6 0-39.9 27-39.9 54.9V416h-66.4V202.2h63.7v29.2h.9c8.9-16.8 30.6-34.5 62.9-34.5 67.2 0 79.7 44.3 79.7 101.9V416z"
                        ></path></svg
                    >
                </a>
            </div>
        </div>
        <div class="w-full h-min flex justify-center">
            <img
                class="w-3/4 rounded-2xl"
                src="https://source.widen.net/content/7yk7jmsaxj/webp/WRG-2241030_3-ft-Nordic-Frost-Decorated-Tree-Kit_SSC.webp?position=c&color=ffffffff&quality=100&u=7mzq6p"
            />
        </div>
    </div>

    <!-- Education Section -->
    <Section id="education" isWhite={true} title="Education">
        <div
            class="mt-10 gap-10 grid grid-cols-3 max-md:grid-cols-2 max-sm:grid-cols-1"
        >
            <SchoolCards
                school="California Polytechnic Pomona"
                degree="B. Science (Computer Science)"
                years="2021-2025"
            />
            <SchoolCards
                school="San Gabriel Highschool"
                degree="High School Diploma"
                years="2017-2021"
            />
        </div>
    </Section>

    <!-- Experience -->
    <Section isWhite={false} title="Experience" id="experience">
        <div class="flex flex-col mt-10">
            <ExperienceCard
                title="Research Assistant"
                years="Winter 2024"
                company="California State Polytechnic University Pomona"
                desc="Researched different methods of using machine learning to detect and label animals given wildlife cam footage."
                bullets={["Conducted comprehensive literature reviews by analyzing over 20 scholarly articles to evaluate the efficiency of various neural network architectures, leading to informed selection of optimal models for implementation.", "Facilitated knowledge sharing sessions with team members, synthesizing complex research findings into clear documentation that accelerated the learning curve for new team members and enhanced project productivity by 20%."]}
            />
        </div>
    </Section>

    <!-- Projects -->
    <Section isWhite={true} title="Projects" id="projects">
        <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mt-10"
        >
            <ProjectCard
                pic="https://www.uxdesigninstitute.com/blog/wp-content/uploads/2022/06/34_Builtin-1.png"
                title="Test"
                desc="Lorem ipsum dolor sit amet consectetur adipisicing elit. Vitae officia porro blanditiis maiores tenetur praesentium voluptatem adipisci? Distinctio adipisci nihil, eius, aut earum at rerum voluptate ad error odit autem."
                technologies={["React", "Next.js", "test", "test"]}
                application_type="Website"
                href="#education"
            />
        </div>
    </Section>

    <!-- Certificates -->
    <Section isWhite={false} title="Certificates" id="certificates">
        <div class="flex justify-center">
            <CertificatesCarousel client:only="react" />
        </div>
    </Section>

    <!-- Skills -->
    <Section isWhite={true} title="Skills and Languages" id="skills">
        <div class="flex flex-wrap gap-3 md:gap-6 mt-10">
            <SkillsCards
                icon="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c3/Python-logo-notext.svg/2048px-Python-logo-notext.svg.png"
                title="Python"
            />
            <SkillsCards
                icon="https://www.svgrepo.com/show/303388/java-4-logo.svg"
                title="Java"
            />
            <SkillsCards
                icon="https://raw.githubusercontent.com/github/explore/80688e429a7d4ef2fca1e82350fe8e3517d3494d/topics/react/react.png"
                title="React"
            />
        </div>
    </Section>

    <!-- Contact -->
    <Section isWhite={false} title="Contact" id="contact">
        <div class="flex justify-center mt-10 mb-40">
            <ContactCard />
        </div>
    </Section>
</div>
